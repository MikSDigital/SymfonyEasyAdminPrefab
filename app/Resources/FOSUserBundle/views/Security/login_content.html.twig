{% trans_default_domain 'FOSUserBundle' %}

<p class="login-box-msg">Sign in to start your session</p>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group has-feedback">
        <input type="email"
               name="_username"
               class="form-control"
               placeholder="Email"
               value="{{ last_username }}"
               required>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
        <input type="password"
               name="_password"
               class="form-control"
               placeholder="Password"
               required>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>

    <div class="row">
        <div class="col-xs-8">
            <div class="checkbox icheck">
                <label>
                    <input type="checkbox" name="_remember_me" value="on">
                    &nbsp;
                    {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
            <input type="submit" class="btn btn-primary btn-block btn-flat" name="_submit" value="Sign In">
        </div>
        <!-- /.col -->
    </div>

</form>

<div class="social-auth-links text-center">
    <p>&mdash; OR &mdash;</p>
    {% include ':partials:social_links.html.twig' with { context: 'login' } %}
</div>
<!-- /.social-auth-links -->

<a href="{{ path('fos_user_resetting_request') }}">
    I forgot my password
</a>
<br>
<a href="{{ path('fos_user_registration_register') }}" class="text-center">
    Register a new membership
</a>


